{
  "name": "hydrogen-ui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "run-p lint:js lint:language",
    "lint:js": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx packages/*/src",
    "lint:language": "alex {.,.changeset} --diff",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "ci:checks": "turbo run typecheck test:ci lint format:check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "@shopify/prettier-config": "^1.1.2",
    "alex": "^10.0.0",
    "cpy-cli": "^4.2.0",
    "eslint": "^8.16.0",
    "eslint-plugin-hydrogen": "^0.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jsonlint": "^1.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "turbo": "^1.5.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
}
